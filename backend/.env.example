# ==============================================================================
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to Git (already in .gitignore)

# ==============================================================================
# Database Configuration
# ==============================================================================
# Local Development
DATABASE_URL="mysql://root:password@localhost:3306/bank_atm_db"

# Azure MySQL (Production - update when deploying)
# DATABASE_URL="mysql://username@servername.mysql.database.azure.com:3306/bank_atm_db?ssl-ca=/path/to/cert"

# ==============================================================================
# Server Configuration
# ==============================================================================
PORT=3000
NODE_ENV=development

# ==============================================================================
# Security
# ==============================================================================
# Generate secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# bcrypt rounds (10-12 recommended for production)
BCRYPT_ROUNDS=10

# ==============================================================================
# CORS Configuration
# ==============================================================================
# Development: Allow all origins
CORS_ORIGIN=*

# Production: Specify Qt app origin
# CORS_ORIGIN=http://localhost:5000

# ==============================================================================
# API Configuration
# ==============================================================================
API_PREFIX=/api
API_VERSION=v1

# ==============================================================================
# Logging (Optional - for bonus feature)
# ==============================================================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ==============================================================================
# Azure Configuration (For deployment)
# ==============================================================================
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_APP_INSIGHTS_KEY=your-instrumentation-key
